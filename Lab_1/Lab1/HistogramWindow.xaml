<Window x:Class="Lab1.HistogramWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HistogramWindow" Height="300" Width="300">
    <Grid>
        <GroupBox Name="border" Grid.Column="0" Grid.Row="1" BorderThickness="0">
            <Border BorderThickness="1" BorderBrush="Black" Background="White" Margin="4">
                <Polygon Name="polygon" Stretch="Fill" Fill="Black" Opacity="0.8" />
            </Border>
        </GroupBox>
    </Grid>
</Window>
